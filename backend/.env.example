# Server
PORT=3001
NODE_ENV=development

# MongoDB (local with auth)
MONGODB_URI=mongodb://safekids_user:safekids_pass@localhost:27017/safekids?authSource=admin

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI / Ollama
OLLAMA_BASE_URL=http://10.0.0.100:11434
OLLAMA_MODEL=gemma3:12b
AI_RATE_LIMIT_MAX=5
AI_RATE_LIMIT_WINDOW_MS=60000
AI_CACHE_TTL_SECONDS=60

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=5

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
