# SafeKids Production Environment Configuration
# Copy to .env and fill in all values before starting the application

# Server
PORT=3001
NODE_ENV=production

# MongoDB (local with authentication)
# Create a dedicated user with readWrite on the safekids database
MONGODB_URI=mongodb://safekids_user:CHANGE_THIS_PASSWORD@localhost:27017/safekids?authSource=admin

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_HEX
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI / Ollama (local LLM server)
OLLAMA_BASE_URL=http://10.0.0.100:11434
OLLAMA_MODEL=gemma3:12b
AI_RATE_LIMIT_MAX=5
AI_RATE_LIMIT_WINDOW_MS=60000
AI_CACHE_TTL_SECONDS=60

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=5

# Frontend URL (for CORS - set to your actual domain)
FRONTEND_URL=https://YOUR_DOMAIN
